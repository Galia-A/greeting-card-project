<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head") %>
    <style>
      .registerFormDiv {
        margin: auto auto;
        margin-top: -30px;
        padding: 20px;
        transform: translate(0, 10%);
        width: 800px;
        border: 3px solid rgb(106, 204, 111);
        border-radius: 5%;
        position: relative;
        /* display: flex;
        justify-content: space-around; */
      }
      .registerHeadline {
        margin-bottom: 5%;
        text-align: center;
      }
      .hello {
        font-size: xx-large;
        margin-bottom: 10%;
      }
      .btnEffect {
        color: #fefefe;
        background: #10c562;
        -webkit-transition: none;
        -moz-transition: none;
        transition: none;
        border: 4px solid #10c562;
        text-align: center;
        border-radius: 60px;
        width: 100px;
        padding: 5px;
        margin-top: 5%;
      }
      .btnEffect:hover {
        background: transparent;
        color: #10c562;
      }
      .navBarStyle {
        background-color: rgb(106, 204, 111);
      }
    </style>
  </head>
  <body>
    <div id="wrapper">
      <div class="container">
        <%- include("partials/navbar", {firstName: firstName ? firstName : ""})
        %>
        <div class="registerFormDiv">
          <h2 class="registerHeadline">איזור אישי - עדכון פרטים</h2>

          <form action="/edit" method="post">
            <!-- first name -->
            <div class="form-group form-row">
              <label for="firstName" class="col-sm-2 col-form-label"
                >שם פרטי
              </label>
              <div class="col-sm-5">
                <input
                  type="text"
                  class="form-control"
                  name="firstName"
                  id="firstName"
                  pattern="^[א-ת][א-ת-' ]{1,20}$"
                  value="<% if (firstName) { %><%- firstName %><% } %>"
                  required
                />
                <small id="firstName" class="form-text text-muted">
                  בעברית בבקשה
                </small>
              </div>
            </div>
            <!-- last name -->
            <div class="form-group form-row">
              <label for="lastName" class="col-sm-2 col-form-label"
                >שם משפחה
              </label>
              <div class="col-sm-5">
                <input
                  type="text"
                  class="form-control"
                  name="lastName"
                  id="lastName"
                  pattern="^[א-ת][א-ת-' ]{1,20}$"
                  value="<% if (lastName) { %><%- lastName %><% } %>"
                  required
                />
                <small id="firstName" class="form-text text-muted">
                  בעברית בבקשה
                </small>
              </div>
            </div>
            <!-- email -->
            <div class="form-group form-row">
              <label for="email" class="col-sm-2 col-form-label">דוא"ל </label>
              <div class="col-sm-5 handWriteFontEnglish">
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  value="<% if (email) { %><%- email %><% } %>"
                  id="email"
                  required
                />
              </div>
            </div>
            <!-- user Name -->
            <div class="form-group form-row">
              <label for="username" class="col-sm-2 col-form-label"
                >שם משתמש
              </label>
              <div class="col-sm-5 handWriteFontEnglish">
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  id="username"
                  value="<% if (username) { %> <%- username %> <% } %>"
                  required,
                  readonly
                />
              </div>
            </div>

            <!-- password -->
            <div class="form-group form-row">
              <label for="password" class="col-sm-2 col-form-label"
                >סיסמה
              </label>
              <div class="col-sm-5">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  value=""
                  pattern="[0-9a-zA-Z]{4,8}"
                />
                <small id="password" class="form-text text-muted">
                  הסיסמה צריכה להיות מורכבת מ 4-8 אותיות ומספרים
                </small>
              </div>
            </div>

            <!-- admin code -->
            <div class="form-group form-row">
              <label for="adminCode" class="col-sm-2 col-form-label"
                >קוד אדמין
              </label>
              <div class="col-sm-2 ">
                <input
                  type="text"
                  class="form-control"
                  name="adminCode"
                  id="adminCode"
                  pattern="[0-9]{4}"
                  value=""
                />
              </div>
            </div>

            <div class="row">
              <div class="col-sm-9 offset-sm-6">
                <button type="submit" class="btnEffect">עדכון</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- BOOTSTRAP -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
      integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.rtlcss.com/bootstrap/v4.2.1/js/bootstrap.min.js"
      integrity="sha384-a9xOd0rz8w0J8zqj1qJic7GPFfyMfoiuDjC9rqXlVOcGO/dmRqzMn34gZYDTel8k"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
