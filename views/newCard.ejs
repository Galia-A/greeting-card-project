<!DOCTYPE html>
<html lang="en">
  <head>
  <%- include("partials/head") %>
  <style>
  .sketchDiv {
  margin: auto auto;
  padding: 20px;
  transform: translate(0, 10%);
  width: 800px;
  border: 3px solid rgb(0, 204, 255);
  border-radius: 5%;
}
.sketchHeadline{
  margin-bottom: 5%;
  text-align: center;
}
.navBarStyle {
  background-color: rgb(101, 178, 197);
}

  </style>
</head>
<body>
  <div id="wrapper">
    <div class="container">
        <%- include("partials/navbar", {firstName: firstName}) %>


      <div class="sketchDiv">

        <h2 class="sketchHeadline"><%= headline %></h2>
        
        <form action=<% if (cardData._id) { %> <%-`/cards/${cardData._id}/edit` %> <% } else { %> <%- "/cards" %> <% } %> method="post">

          <div class="form-group row">
            <label for="forname" class="col-sm-2 col-form-label">למי הברכה? </label>
            <div class="col-sm-4">
              <input type="text" class="form-control" name="card[forname]" id="forname" value = "<%- cardData.recipientDescription %>">
            </div>
          </div>

          <fieldset class="form-group">
              <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">צורת הפנייה</legend>
                <div class="col-sm-4">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="card[gender]" id="male" value="male" <% if (cardData.gender === "male") { %> <%- "checked" %> <% } %> >
                    <label class="form-check-label" for="male">
                      זכר
                    </label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="card[gender]" id="female" value="female" <% if (cardData.gender === "female") { %> <%- "checked" %> <% } %>>
                    <label class="form-check-label" for="female">
                      נקבה
                    </label>
                  </div>
                </div>
              </div>
            </fieldset>

            <div class="form-group form-row">
              <label class="col-sm-2 col-form-label offset-sm-3" for="eventType">מה האירוע? </label>
              <div class="col-sm-4">
              <select class="form-control" name="card[eventType]" id="eventType">
                <option value="birthday" <% if (cardData.eventType === "birthday") { %> <%- "selected" %> <% } %>>יום הולדת</option>
                <option value="endSchool" <% if (cardData.eventType === "endSchool") { %> <%- "selected" %> <% } %>>קבלת תואר</option>
                <option value="anniversary" disabled <% if (cardData.eventType === "anniversary") { %> <%- "selected" %> <% } %>>יום נישואין</option>

              </select>
           </div>

          </div>

          <fieldset class="form-group">
              <div class="row">
                <legend class="col-form-label col-sm-2 pt-0 offset-sm-3">תחומי עניין</legend>
                <div class="col-sm-7">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="card[interests]" id="interestsCats" value="cats" <% if (cardData.interests === "cats") { %> <%- "checked" %> <% } %>>
                    <label class="form-check-label" for="interestsCats">
                      חתולים
                    </label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="card[interests]" id="interestsDogs" value="dogs" <% if (cardData.interests === "dogs") { %> <%- "checked" %> <% } %>>
                    <label class="form-check-label" for="interestsDogs">
                      כלבים
                    </label>
                  </div>

                  <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="card[interests]" id="interestsTravel" value="travel" <% if (cardData.interests === "travel") { %> <%- "checked" %> <% } %>>
                      <label class="form-check-label" for="interestsTravel">
                        טיולים
                      </label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="card[interests]" id="interestsDance" value="dance" <% if (cardData.interests === "dance") { %> <%- "checked" %> <% } %>>
                        <label class="form-check-label" for="interestsDance">
                          ריקודים
                        </label>
                      </div>

                </div>
              </div>
            </fieldset>

          <fieldset class="form-group">
              <div class="row ">
                <legend class="col-form-label col-sm-2 pt-0 offset-sm-3">אופי הברכה</legend>
                <div class="col-sm-4">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="card[style]" id="classic" value="classic" <% if (cardData.style === "classic") { %> <%- "checked" %> <% } %>>
                    <label class="form-check-label" for="classic">
                      קלאסי
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="card[style]" id="Geek" value="geek" <% if (cardData.style === "geek") { %> <%- "checked" %> <% } %>>
                    <label class="form-check-label" for="Geek">
                      גיק
                    </label>
                  </div>
                </div>
              </div>
            </fieldset>

          <div class="form-group row">
            
              <label class="col-sm-2 col-form-label offset-sm-7" for="senderSignature">צורת חתימה </label>
              <div class="col-sm-3">
              <select class="form-control" name="card[senderSignature]" id="senderSignature">
                <% for (let sig in signatures) { %>
                  <% if (cardData.senderSignature === sig) { %>
                    <option value="<%- sig %>" selected><%- signatures[sig] %></option>
                    <% } else { %>
                      <option value="<%- sig %>"><%- signatures[sig] %></option>
                  <% }} %>
              </select>
              </div>
            
          </div>

          <div class="form-group row">
              <label class="col-sm-2 col-form-label offset-sm-7" for="senderName">שמך / שמכם </label>
              <div class="col-sm-3">
              <input type="text" class="form-control" name="card[senderName]" id="senderName" value = "<%- cardData.senderNameDescription %>">
            </div>
          </div>
          

          <div class="row">
              <div class="col-sm-9 offset-sm-5">
                  <button type="submit" class="btn btn-info">לברכה!</button>
              </div>
          </div>

        </form>
      </div>
    </div>
  </div>
  <!-- BOOTSTRAP -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://cdn.rtlcss.com/bootstrap/v4.2.1/js/bootstrap.min.js" integrity="sha384-a9xOd0rz8w0J8zqj1qJic7GPFfyMfoiuDjC9rqXlVOcGO/dmRqzMn34gZYDTel8k" crossorigin="anonymous"></script>
</body>
</html>
